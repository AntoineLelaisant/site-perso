<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Antoine Lelaisant{% endblock %}</title>

        {% block stylesheets %}
            <link href='//fonts.googleapis.com/css?family=Open+Sans:400,700,300,600' rel='stylesheet' type='text/css'>
            <link href='//fonts.googleapis.com/css?family=Montserrat:700,400' rel='stylesheet' type='text/css'>

            {% stylesheets combine=true
                "@bootstrap_css"
                "assets/css/reset.css"
                "assets/css/menu.css"
                "assets/css/timeline.css"
                "assets/css/skills.css"
                "assets/css/contact.css"
                "assets/css/main.css"
             %}
                <link rel="stylesheet" href="{{ asset_url }}">
            {% endstylesheets %}

        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}

        {% block javascripts %}

            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

            {% javascripts filter='?yui_js' combine=true
                "assets/js/analytics.js"
                "assets/js/modernizr.js"
                "assets/js/menu.js"
                "assets/js/jquery-smooth-scroller.min.js"
                "assets/js/timeline.js"
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
